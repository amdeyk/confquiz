# Database
DATABASE_URL=sqlite+aiosqlite:///./quiz.db

# Note: copy this file to `.env` (default) or set ENV_FILE to another filename (for example `.env2`).

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server
HOST=0.0.0.0
PORT=8000

# Media Storage
UPLOAD_DIR=./media/uploads
SLIDES_DIR=./media/slides
THUMBS_DIR=./media/thumbs

# PPT Conversion
LIBREOFFICE_PATH=/usr/bin/libreoffice

# Admin Default
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# LiveKit (SFU)
LIVEKIT_URL=wss://livekit.your-domain.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_TOKEN_TTL_SECONDS=3600
LIVEKIT_ROOM_PREFIX=quiz

# Bandwidth monitoring (VPS)
BANDWIDTH_MONITOR_ENABLED=true
BANDWIDTH_INTERFACE=eth0
BANDWIDTH_SAMPLE_INTERVAL_SECONDS=60
BANDWIDTH_BUDGET_GB=200
BANDWIDTH_WARN_GB=160
BANDWIDTH_CRITICAL_GB=180

# Conference/Event Details (Required - customize for your event)
CONFERENCE_NAME=Your Conference Name
CONFERENCE_FULL_NAME=Full Conference Description
CONFERENCE_DATES=Event Dates
CONFERENCE_VENUE=Event Venue
CONFERENCE_CHAIRPERSON=Name
CONFERENCE_ORGANIZER=Name
CONFERENCE_SCIENTIFIC_CHAIR=Name
